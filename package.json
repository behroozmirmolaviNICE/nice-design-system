{
  "name": "nice-design-system",
  "private": true,
  "version": "0.0.1",
  "description": "Monorepo for the NICE Design System",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build:es && lerna run --scope=dev-app start",
    "// STORYBOOK": "",
    "storybook": "start-storybook -p 6006 -s ./node_modules/@nice-digital/icons/dist/",
    "storybook:build": "build-storybook",
    "// LERNA": "",
    "bootstrap": "lerna bootstrap --hoist --nohoist=babel-*",
    "publish": "lerna publish",
    "// TESTS": "",
    "test": "cross-env CI=true npm run test:unit && npm run lint && npm run flow",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "// LINTING": "",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint ./packages/*/src/**/*.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:scss": "stylelint packages/**/*.scss",
    "flow": "flow",
    "// TRANSIPLE ES6": "",
    "prebuild:lib": "lerna exec rimraf lib",
    "build:lib": "lerna exec --scope=@nice-digital/nds-* --parallel -- babel src -d lib --source-maps --root-mode upward",
    "build:lib:watch": "npm run build:lib -- -w",
    "prebuild:es": "lerna exec rimraf es",
    "build:es": "cross-env NODE_ENV=es lerna exec --scope=@nice-digital/nds-* --parallel -- babel src -d es --source-maps --root-mode upward",
    "build:es:watch": "npm run build:es -- -w",
    "build:watch": "concurrently -n build: npm:build:*:watch",
    "// LIFECYCLE": "",
    "postinstall": "npm run bootstrap",
    "prepublish": "npm run build:lib && npm run build:es"
  },
  "config": {
    "//": "Banner is used for prepending to compiled JS and CSS",
    "banner": "NICE Design System ${ version } | ${ date }\nÂ© Copyright NICE 2015-${ year }\nLicensed under MIT (https://github.com/nhsevidence/nice-design-system/blob/master/LICENSE)"
  },
  "author": "Ian Routledge <ian.routledge@nice.org.uk>",
  "contributors": [
    "NICE Digital Services (https://www.nice.org.uk/digital)",
    "Ian Routledge (http://ediblecode.com)"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-modules-commonjs": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@nice-digital/eslint-config": "^1.0.1",
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-knobs": "^5.0.6",
    "@storybook/addon-links": "^5.0.6",
    "@storybook/addon-viewport": "^5.0.6",
    "@storybook/addons": "^5.0.6",
    "@storybook/react": "^5.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.4",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.9.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.11.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.96.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "lerna": "^3.13.1",
    "node-sass": "^4.10.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.4"
  },
  "dependencies": {
    "@nice-digital/icons": "^2.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
