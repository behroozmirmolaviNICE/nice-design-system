{% extends "layouts/_layout.njk" %}
{% set title = "Grid" %}

{% block body %}

	<div class="container">

		<h1>Grid</h1>

		<h2>Widths</h2>

		<h3>Wholes</h3>

		<div class="grid">
			<div data-g="12"><div class="panel">1 whole</div></div>
			<div data-g="one-whole"><div class="panel">1 whole</div></div>
		</div>

		<h3>Halves</h3>

		<div class="grid">
			<div data-g="6"><div class="panel">1/2</div></div>
			<div data-g="one-half"><div class="panel">1/2</div></div>
		</div>

		<h3>Thirds</h3>

		<div class="grid">
			<div data-g="4"><div class="panel">1/3</div></div>
			<div data-g="two-thirds"><div class="panel">2/3</div></div>
		</div>

		<h3>Quarters</h3>

		<div class="grid">
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="one-quarter"><div class="panel">1/4</div></div>
			<div data-g="two-quarters"><div class="panel">2/4</div></div>
		</div>

		<h2>Gutters</h2>

		<h3>Default</h3>

		<div class="grid">
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
		</div>

		<h3>Gutterless</h3>

		<div class="grid grid--gutterless">
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
		</div>

		<h3>Compact</h3>

		<div class="grid grid--compact">
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
		</div>

		<h3>Loose</h3>

		<div class="grid grid--loose">
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
			<div data-g="3"><div class="panel">1/4</div></div>
		</div>

	</div>

{% endblock %}
